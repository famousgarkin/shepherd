{
  "private": true,
  "dependencies": {
    "bower": "^1.4.1",
    "browserify": "^13.0.1"
  },
  "devDependencies": {
    "eslint": "^2.10.2",
    "jasmine": "^2.4.1",
    "node-qunit-phantomjs": "^1.2.0",
    "qunitjs": "^1.18.0",
    "watchify": "^3.7.0"
  },
  "scripts": {
    "postinstall": "bower install && npm run build",
    "lint": "eslint src tests .eslintrc.js",
    "test": "jasmine && node-qunit-phantomjs tests/index.html",
    "build": "browserify src/app.js -o build/bundle.js",
    "watch": "watchify src/app.js -o build/bundle.js -dv"
  }
}
